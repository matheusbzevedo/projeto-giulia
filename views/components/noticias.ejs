<div class="col s12 m6 l4">
    <div class=card>
        <div class=card-action>
            <span class=date>
                <%= day[new Date(noticia.post_data).getDay()] %>,
                <%= new Date(noticia.post_data).getDate() %>
                <%= month[new Date(noticia.post_data).getMonth()] %>
                <%= new Date(noticia.post_data).getFullYear() %>
            </span>
        </div>
        <div class=card-image>
            <img class=materialboxed data-caption="<%= noticia.titulo %>" title="<%= noticia.titulo %>" src="<%= noticia.imagem %>">
        </div>
        <div class=card-action>
            <a title="<%= noticia.titulo %>" href=<%= noticia.link %>>
                <p class=title-clamp>
                    <%= noticia.titulo %>
                </p>
            </a>
        </div>
        <div class=card-content>
            <p class=content-clamp>
                <%= noticia.resumo %>
            </p>
        </div>
        <div class=card-action>
            <a href=<%= noticia.link %> target=_blank>Leia mais</a>
        </div>
    </div>
</div>